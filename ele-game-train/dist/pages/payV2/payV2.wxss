.intro-course-info {
  position: relative;
}
.intro-course-info .course-info {
  position: absolute;
  left: 0;
  bottom: 260rpx;
  text-align: center;
  width: 100%;
}
.intro-course-info .course-info .course-info-wrapper {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  margin-bottom: 10rpx;
}
.intro-course-info .course-info--title {
  display: block;
  color: #000;
  font-size: 36rpx;
  margin-bottom: 5rpx;
}
.intro-course-info .course-info--description {
  display: block;
  color: #f00;
  font-size: 24rpx;
}
.intro-course-info .course-info--name, .intro-course-info .course-info--time {
  width: 260rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 36rpx;
  color: #fff;
  background-color: #f00;
  display: block;
}
.intro-course-info .course-info--name {
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  margin-right: 1rpx;
}
.intro-course-info .course-info--time {
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  margin-left: 1rpx;
}

.bottom-bar {
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  -webkit-box-shadow: 0 -1rpx 3rpx 0 rgba(100, 100, 100, 0.2);
          box-shadow: 0 -1rpx 3rpx 0 rgba(100, 100, 100, 0.2);
  position: fixed;
  left: 0;
  bottom: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}

